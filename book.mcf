 <page designStyleID="196083" pagenr="18" rotation="0" type="normalpage">
  <bundlesize height="2050" width="5400"/>
  <designElementIDs background="201" layout="125026" styles_v2="196083"/>
  <background alignment="1" designElementId="201" rotation="0" type="1"/>
  <background designElementId="125026" layout="1" templatename="schema_landscape_001,normal"/>
