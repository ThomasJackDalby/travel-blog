 <page designStyleID="196083" pagenr="25" rotation="0" type="normalpage">
  <bundlesize height="2050" width="5400"/>
  <designElementIDs background="201" layout="125026" styles_v2="196083"/>
  <background alignment="3" designElementId="201" rotation="0" type="1"/>
  <background designElementId="125026" layout="1" templatename="schema_landscape_005,normal"/>
  <area areatype="textarea">
